<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTestApp.LocationTrackerPage"
             Title="LocationTrackerPage">
    <StackLayout>
        <Button Text="Tracklocation" Clicked="ButtonTrackLocation_Clicked"/>
        <Label Text="Longitude:"
                HorizontalOptions="Center" />
        <Label 
                HorizontalOptions="Center" x:Name="lblLongitude"/>
        <Label Text="Latitude:"
                HorizontalOptions="Center" />
        <Label 
                HorizontalOptions="Center" x:Name="lblLatitude" />
    </StackLayout>
</ContentPage>
